                    <form method="post" asp-action="SendMessage" asp-controller="Medical">
                        <div asp-validation-summary="ModelOnly"></div>
                        <div class="row g-3" >
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input asp-for="Name" class="form-control" id="name" placeholder="Your Name">
                                    <span asp-validation-for="Name" class="text-danger"></span>

                                    <label asp-for="Name">Your Name</label>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input asp-for="Email" class="form-control" id="email" placeholder="Your Email">
                                    <span asp-validation-for="Email" class="text-danger"></span> 
                                        
                                    <label asp-for="Email">Your Email</label>
                                </div>
                            </div>
                            <div class="col-12">
                                <div class="form-floating">
                                    <input name="Subject" type="text" asp-for="Subject" class="form-control" id="subject" placeholder="Subject">
                                    <span asp-validation-for="Subject" class="text-danger"></span>
                                    <label asp-for="Subject">Subject</label>
                                </div>
                            </div>
                            <div class="col-12">
                                <div class="form-floating">
                                    <textarea name="Message" class="form-control" asp-for="Message" placeholder="Leave a message here" id="message" style="height: 100px"></textarea>
                                    <span asp-validation-for="Message" class="text-danger"></span>

                                    <label asp-for="Message">Message</label>
                                </div>
                            </div>
                            <div class="col-12">
                                <button class="btn btn-primary w-100 py-3" type="submit">Send Message</button>
                            </div>
                        </div>
                    </form>

